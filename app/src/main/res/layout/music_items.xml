<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/audio_item"
    android:layout_marginTop="5dp"
    android:background="#111111">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/music_img"
        android:src="@mipmap/ic_launcher_round"
        android:padding="5dp">
    </ImageView>

    <TextView
        android:id="@+id/music_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/menuMore"
        android:layout_toEndOf="@+id/music_img"
        android:layout_marginTop="15dp"
        android:text="File Name"
        android:textColor="@color/colorAccent"></TextView>

    <TextView
        android:id="@+id/music_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/menuMore"
        android:layout_toEndOf="@+id/music_img"
        android:layout_below="@+id/music_file_name"
        android:text="File Name"
        android:textSize="10dp"
        android:textColor="@color/blue"></TextView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/menuMore"
        android:src="@drawable/ic_more"
        android:layout_alignParentEnd="true"
        android:padding="10dp">
    </ImageView>
</RelativeLayout>