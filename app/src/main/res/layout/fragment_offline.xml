<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_2"
    android:orientation="vertical"
    tools:context=".OfflineFragment"
    >

    <RelativeLayout
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient_bg"
        android:padding="30dp">


        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-black"
            android:singleLine="true"
            android:text="John Cina"
            android:textColor="@color/white"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="45dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Address: Ha Noi"
            android:textColor="@color/white"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/Birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="65dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="July 20th"
            android:textColor="@color/white"
            android:textSize="15dp">

        </TextView>

        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="104.0dp"
            android:layout_height="104.0dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_ellipse1">

        </ImageView>


        <ImageButton
            android:id="@+id/menu_button"
            style="@style/image_button"
            android:layout_marginLeft="300dp"
            android:background="@drawable/menu"
            android:onClick="Menu_button">

        </ImageButton>

        <ImageButton
            android:id="@+id/heart_button"
            style="@style/image_button"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/heart"
            android:onClick="heart_button">

        </ImageButton>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Top Chart singers"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black">

        </TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/list_chars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/singer1_img"
            style="@style/buttonChars"
            android:background="@drawable/billieeilish"
            android:fontFamily="sans-serif-black"
            android:gravity="bottom|center_horizontal"
            android:onClick="singer1_button"
            android:text="Singer1"
            android:textSize="10dp"></Button>

        <Button
            android:id="@+id/singer2_img"
            style="@style/buttonChars"
            android:background="@drawable/aururasinger"
            android:fontFamily="sans-serif-black"
            android:gravity="bottom|center_horizontal"
            android:onClick="singer2_button"
            android:text="Singer2"
            android:textSize="10dp">

        </Button>
    </LinearLayout>









    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"></Space>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp">

        <Button
            android:id="@+id/song_button"
            style="@style/button_sample"
            android:background="@drawable/gradient_button"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ic_baseline_queue_music_24"
            android:fontFamily="sans-serif-black"
            android:text="Songs"
            android:textColor="@color/white"
            android:onClick="Song_button"
            android:textSize="15dp"></Button>

        <Button
            android:id="@+id/Album_buttom"
            style="@style/button_sample"
            android:background="@drawable/gradient_button"
            android:drawableLeft="@drawable/ic_baseline_library_music_24"
            android:fontFamily="sans-serif-black"
            android:text="Albums"
            android:onClick="albums_button"
            android:textColor="@color/white"
            android:textSize="15dp"></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp">

        <Button
            android:id="@+id/device_button"
            style="@style/button_sample"
            android:fontFamily="sans-serif-black"
            android:text="devices"
            android:background="@drawable/gradient_button"
            android:drawableLeft="@drawable/ic_baseline_arrow_circle_down_24"
            android:textColor="@color/white"
            android:onClick="Device_button"
            android:textSize="15dp"></Button>

        <Button
            android:id="@+id/Favorite"
            style="@style/button_sample"
            android:fontFamily="sans-serif-black"
            android:drawableLeft="@drawable/ic_baseline_favorite_24"
            android:text="Favorite"
            android:onClick="favorite_button"
            android:background="@drawable/gradient_button"
            android:textColor="@color/white"
            android:textSize="15dp"></Button>


    </LinearLayout>

</RelativeLayout>
